source 'https://rubygems.org'

# for nanoc live in Ruby 3.0+
gem 'webrick'
gem 'nanoc'

group 'nanoc' do
  # nanoc-live supercedes guard-nanoc in nanoc 4.12
  gem "nanoc-live"
end

# web server for nanoc view
gem 'adsf'

# markdown
gem 'kramdown'

# required for bundle deploy
gem 'systemu'

# required for new_post Rakefile rule
gem 'stringex'
gem 'highline'

# required for colorize_syntax
gem 'pygments.rb'
gem 'nokogiri'

# required for resume
gem 'slim'
gem 'redcarpet'

# required for blogging.atom_feed
gem 'builder'

# code formatting
gem 'rubocop'

# no logger included in ruby 3.5.0
gem 'logger'
gem 'pstore'
